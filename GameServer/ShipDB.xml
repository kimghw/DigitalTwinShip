<?xml version="1.0" encoding="utf-8"?>
<GameDB>
	<Table name ="Test">
		<Column name ="id" type ="int" notnull ="true" identity ="1,1"/>
		<Column name ="gold" type ="int" notnull ="false"/>
		<Column name ="name" type ="nvarchar(50)" notnull ="false"/>
		<Column name ="creatDate" type ="datetime" notnull ="false"/>
		<index type ="clustered">
			<PrimaryKey/>
			<Column name ="id"/>
		</index>
		
	</Table>

	<Procedure name ="spInsertTest">
		<Param name ="@gold" type="int"/>
		<Param name ="@name" type="nvarchar(50)"/>
		<Param name ="@creatDate" type="datetime"/>
		<Body>
			<![CDATA[
			INSERT INTO [dbo].[test] ([gold], [name], [createDate]) VALUES (@gold,@name,@creatDate)
			]]>
			
		</Body>
	</Procedure>

	<Procedure name ="spGetTest">
		<Param name ="@gold" type="int"/>
		<Param name ="@name" type="nvarchar(50)"/>
		<Param name ="@creatDate" type="datetime"/>
		<Body>
			<![CDATA[
			SELECT id, gold, name, createDate FROM [dbo].[test] WHERE gold = (@gold)
			]]>
		</Body>
	</Procedure>
</GameDB>